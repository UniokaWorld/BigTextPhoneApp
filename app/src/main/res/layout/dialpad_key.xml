<?xml version="1.0" encoding="utf-8"?>

<!-- A layout representing a single key in the dialpad -->
<com.chooloo.www.callmanager.ui.widgets.DialpadKeyButton xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DialpadKey"
    android:background="@drawable/bubble_background">

    <LinearLayout style="@style/DialpadKeyInnerLayout">

        <TextView
            android:id="@+id/dialpad_key_number"
            style="@style/DialpadKeyNumber"
            android:layout_height="wrap_content"
            android:accessibilityLiveRegion="none"
            android:fontFamily="@font/google_sans_bold"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="52sp"
            tools:text="n" />

        <TextView
            android:id="@+id/dialpad_key_letters"
            style="@style/DialpadKeyLetters"
            android:textStyle="bold"
            tools:text="number" />

    </LinearLayout>

</com.chooloo.www.callmanager.ui.widgets.DialpadKeyButton>
<?xml version="1.0" encoding="utf-8"?>

<!-- Dialpad keys -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialpad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:stretchColumns="*"
    android:background="?attr/colorPrimary">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.chooloo.www.callmanager.ui.widgets.DialpadKeyButton
            android:id="@+id/key_1"
            style="@style/DialpadKey"
            android:background="@drawable/bubble_background">

            <LinearLayout style="@style/DialpadKeyInnerLayout">

                <TextView
                    android:id="@+id/dialpad_key_number"
                    style="@style/DialpadKeyNumber"
                    android:layout_width="48dp"
                    android:layout_height="60dp"
                    android:textColor="#000000"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    android:translationY="-8dp"
                    tools:text="n" />

                <ImageView
                    android:id="@+id/dialpad_key_voicemail"
                    style="@style/DialpadKeyLetters"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:baselineAlignBottom="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_voicemail_black_24dp"
                    android:tint="?attr/iconColor" />

            </LinearLayout>

        </com.chooloo.www.callmanager.ui.widgets.DialpadKeyButton>

        <include
            android:id="@+id/key_2"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_3"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

    </TableRow>

    <TableRow>

        <include
            android:id="@+id/key_4"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_5"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_6"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

    </TableRow>

    <TableRow>

        <include
            android:id="@+id/key_7"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_8"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_9"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

    </TableRow>

    <TableRow>

        <include
            android:id="@+id/key_star"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_0"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

        <include
            android:id="@+id/key_hex"
            style="@style/DialpadKey"
            layout="@layout/dialpad_key" />

    </TableRow>

</TableLayout>